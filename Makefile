juice:
ifeq ($(MAKEFLAGS), s)
	echo
	echo
	echo "squeezing lemons and oranges"
	sleep 0.5
	echo "adding delute water"
	sleep 0.8
	echo "mixing ..."
	sleep 1
	echo "                          ""   88             88   "                     
	echo "                  ___     " "   \"\"             \"\"   "                     
	echo "                 /.--     "
	echo "                //        ""   88 88       88 88  ,adPPYba,  ,adPPYba, " 
	echo "               //         ""   88 88       88 88 a8\"     \"\" a8P_____88  "
	echo "    \~~~~~~~~~~''~~~/     ""   88 88       88 88 8b         8PP\"\"\"\"\"\"\"  "
	echo "     \  o    o     /      ""   88 \"8a,   ,a88 88 \"8a,   ,aa \"8b,   ,aa  "
	echo "      \        o  /       ""   88  \`\"YbbdP'Y8 88  \`\"Ybbd8\"\'  \`\"Ybbd8\"\'  " 
	echo "       \   O     /        ""  ,88                                       "
	echo "        \       /         "" 888P\"  "
	echo "         \   o /          "
	echo "          \___/           "  
	echo
	echo
	echo
else
	make juice MAKEFLAGS=s
endif   











